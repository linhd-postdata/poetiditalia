{
    "author": "Angelo Crivelli",
    "title": "epigrammata",
    "url": "http://www.poetiditalia.it/texts/CRIVEL_A|epig|001",
    "text": [
        [
            {
                "verse": "Conspicuum matrona decus virtute serena,"
            },
            {
                "verse": "Anguigeri mater digna fuisse ducis:"
            },
            {
                "verse": "Nec sine te Latias coleret pax candida terras,"
            },
            {
                "verse": "Nec sine te tutum carperet hospes iter,"
            },
            {
                "verse": "Nec sine te fierent nunc aurea secula mundo,"
            },
            {
                "verse": "Omnia cum nati sint opus ista tui."
            },
            {
                "verse": "Nunc licet etherea leteris in arce per omnes,"
            },
            {
                "verse": "Te colet emeritam postera turba dies."
            }
        ],
        [
            {
                "verse": "Lutia matronas inter veneranda priores"
            },
            {
                "verse": "Clauderis hinc Ligurum mater amata ducis:"
            },
            {
                "verse": "Te licet in celum probitas et fata vocarent,"
            },
            {
                "verse": "Nullius compos ambitionis eras."
            }
        ]
    ]
}