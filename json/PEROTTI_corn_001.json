{
    "author": "Niccol\u00f2\u00b2 Perotti",
    "title": "Cornu Copiae fragmenta",
    "url": "http://www.poetiditalia.it/texts/PEROTTI|corn|001",
    "text": [
        [
            {
                "verse": "Varronis Nigidique olim monumenta latinam"
            },
            {
                "verse": "Ditarunt linguam Romuleosque patres;"
            },
            {
                "verse": "Pro quibus ammissis, Perotti copia raptas"
            },
            {
                "verse": "Omnifero o cornu plena refundit opes."
            }
        ],
        [
            {
                "verse": "Non cornu Aetolum, non me bona copia Cretum,"
            },
            {
                "verse": "Diua nouum fundit candida \u00ce\u00ba\u00cf\u0081\u00cf\u0085\u00cf\u0083\u00e1\u00bd\u00b9\u00ce\u00ba\u00ce\u00b5\u00cf\u0081\u00ce\u00b1\u00cf\u0082:"
            },
            {
                "verse": "Illa dabant fruges perituraque munera uentri;"
            },
            {
                "verse": "Hoc animo ambrosium perpetuasque dapes."
            }
        ],
        [
            {
                "verse": "Quisquis amas lepidi sensus haurire poetae"
            },
            {
                "verse": "Quem tulit arguto Bilbilis ingenio,"
            },
            {
                "verse": "Fonte Peroteo te prolue: certus abibis,"
            },
            {
                "verse": "Tuque alios haustus, credula turba, caue."
            },
            {
                "verse": "Ducunt, crede mihi, per deuia, per labyrinthum"
            },
            {
                "verse": "Et monstrant Libyco pro Garamante Getas."
            }
        ],
        [
            {
                "verse": "Fluminis euicti sacrato diuite cornu"
            },
            {
                "verse": "Ornarunt famam Naiades Herculeam;"
            },
            {
                "verse": "Sed nunc Perotti cornu foecundius extat,"
            },
            {
                "verse": "Quod uictor multis amnibus eripuit."
            },
            {
                "verse": "Illud et est pomis et odoro flore repletum,"
            },
            {
                "verse": "Hoc sed habet fructus Pallados eximiae."
            },
            {
                "verse": "Naiades Herculeum, dant hoe tibi copia Musae;"
            },
            {
                "verse": "Haec duo si sumas cornua, maior eris."
            },
            {
                "verse": "Mittit et in latias te nunc Antonius oras"
            },
            {
                "verse": "Vit tanto possit munere quisque frui."
            }
        ],
        [
            {
                "verse": "Praemia debentur solerti magna Perotto,"
            },
            {
                "verse": "Dum pandit nodos, Bilbilitane, tuos."
            },
            {
                "verse": "Praesul Amalthias solum \u00ce\u00ba\u00e1\u00bd\u00b3\u00cf\u0081\u00ce\u00b1\u00cf\u0082 attulit; ecce"
            },
            {
                "verse": "Milia pro solo multa Moretus habet."
            },
            {
                "verse": "Auctori grates igitur debentur utrique,"
            },
            {
                "verse": "Quod prior ingenium, quod dedit alter opus."
            }
        ],
        [
            {
                "verse": "Membra Pelops obtruncus erat; tamen ille deorum"
            },
            {
                "verse": "Dicitur iratus consuluisse pater."
            },
            {
                "verse": "Sic operi Polydorus opero tulit ante reciso."
            },
            {
                "verse": "Quod nunc inflrmo non pede carpit iter."
            }
        ],
        [
            {
                "verse": "O noue Moecenas, studiorum maxime fautor,"
            },
            {
                "verse": "Caesaris alterius qui mihi cura subis,"
            },
            {
                "verse": "Quam tibi pro natis cuperem modo tradere, uenit"
            },
            {
                "verse": "Fructifero cornu copia larga suo,"
            },
            {
                "verse": "Quae plerisque locis prius incorrecta manebat,"
            },
            {
                "verse": "Nec fuerat series ulla magistra sui."
            },
            {
                "verse": "Ecce nouo constans nunc ordine cultior ibit:"
            },
            {
                "verse": "Ad quodcumque uoles et magis aptus eris."
            },
            {
                "verse": "Nec pete patronum cur te properarit adire:"
            },
            {
                "verse": "Haec laribus tutam se putat esse tuis."
            }
        ],
        [
            {
                "verse": "Plaude nunc multum, studiose lector,"
            },
            {
                "verse": "Copiae cornu qui habes politum,"
            },
            {
                "verse": "Quum sit haec libro series reperta"
            },
            {
                "verse": "Lumine fuso."
            },
            {
                "verse": "Non prius cuique facile dabatur"
            },
            {
                "verse": "Posse quod uellet reperire nomen:"
            },
            {
                "verse": "Dictio rectum caput et negabat"
            },
            {
                "verse": "Ordine mixto."
            },
            {
                "verse": "Ergo fac grates habeas utrique:"
            },
            {
                "verse": "Alter est qui Democritus uocatur,"
            },
            {
                "verse": "Hic dedit causam; Tacuinus alter"
            },
            {
                "verse": "Qui bene pressit."
            }
        ],
        [
            {
                "verse": "Hactenus quisquis sibi comparauit"
            },
            {
                "verse": "Copiae cornu, laterem lauasse"
            },
            {
                "verse": "Et sciat nunquam facili dedisse"
            },
            {
                "verse": "Semen arenae,"
            },
            {
                "verse": "Quod fidem nullam faciat legenti"
            },
            {
                "verse": "Ordo confusus tabulae, nec ullum"
            },
            {
                "verse": "Stat sua uerbum serie notatum"
            },
            {
                "verse": "Nec bene iunctum."
            },
            {
                "verse": "Obuius tanto uicio Moretus"
            },
            {
                "verse": "Et grauem certe ratus esse culpam,"
            },
            {
                "verse": "Consulens lautis animis, benigna"
            },
            {
                "verse": "Mente reponit."
            },
            {
                "verse": "Inde iam tersum, nitidum, politum"
            },
            {
                "verse": "Et carens menda madidisque nugis,"
            },
            {
                "verse": "Iam libens quaeso facilisque lector"
            }
        ]
    ]
}