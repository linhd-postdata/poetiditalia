{
    "author": "Faustino Perisauli",
    "title": "epitaphium",
    "url": "http://www.poetiditalia.it/texts/PERISAUL|epit|001",
    "text": [
        [
            {
                "verse": "epitaphium Faustini per D. Franciscum Rufumde Monteiani"
            }
        ],
        [
            {
                "verse": "Faustinum genuit latii Terdocia tellus,"
            },
            {
                "verse": "Corpore qui gracili fuit, at virtutibus ingens."
            },
            {
                "verse": "Per totum didicit latium, contentus in urbe"
            },
            {
                "verse": "Vixit Ariminea, vivis decessit ibidem."
            },
            {
                "verse": "Sarcophago hoc sua membra iacent; sed spiritus unde"
            },
            {
                "verse": "Venerat aethereas subito remeavit ad oras."
            }
        ]
    ]
}