{
    "author": "Giovanni Gioviano Pontano",
    "title": "de tumulis 2",
    "url": "http://www.poetiditalia.it/texts/PONTANO|tum2|001",
    "text": [
        [],
        [
            {
                "verse": "Spargite aquam, date thura focis; lugubria ad aras"
            },
            {
                "verse": "Verba sonent, miseris verba ferenda modis."
            },
            {
                "verse": "Tristior et Lemures cantus iuvat, et iuvat ipsa"
            },
            {
                "verse": "Naenia funereis emodulata sonis."
            },
            {
                "verse": "Pax vobis, tenues umbrae, requiesque sepultis,"
            },
            {
                "verse": "Sit dolor et nullus, nullaque cura sitis,"
            },
            {
                "verse": "Perpetuae sint et noctes somnique perennes;"
            },
            {
                "verse": "O felix, sopor hic cui venit ante diem."
            },
            {
                "verse": "Aeternum dormite, umbrae, aeternumque silete;"
            },
            {
                "verse": "Sit sopor aeternus, perpetuumque vale."
            },
            {
                "verse": "Tu vero cape et haec obitus solatia, Petre"
            },
            {
                "verse": "Compater, a tenebris obsite cymmeriis,"
            },
            {
                "verse": "Quod non opus est medico, non auspice nummo,"
            },
            {
                "verse": "Quodque opera dives nullius ipse egeas."
            },
            {
                "verse": "Aeternum sine me, et mecum post ipse valeto,"
            },
            {
                "verse": "Compater, antiquis annumerande viris."
            }
        ],
        []
    ]
}