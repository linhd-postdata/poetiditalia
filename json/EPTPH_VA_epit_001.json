{
    "author": "epitaphia varia",
    "title": "epitaphium Johannis de Lignano",
    "url": "http://www.poetiditalia.it/texts/EPTPH_VA|epit|001",
    "text": [
        [
            {
                "verse": "Frigida mirifici tenet hic lapis ossa Iohannis;"
            },
            {
                "verse": "Ivit in astriferas mens generosa domos."
            },
            {
                "verse": "Gloria Lignani, titulo decoratus utroque"
            },
            {
                "verse": "Legibus et sacro canone dives erat."
            },
            {
                "verse": "Alter Aristotiles, Hypocras, erat; et Tholomei"
            },
            {
                "verse": "Signifer, etherei noverat astra poli."
            },
            {
                "verse": "Abstulit hunc nobis inopine sincopa mortis;"
            },
            {
                "verse": "Heu dolor! hic mundi portus et ara iacet."
            }
        ],
        []
    ]
}