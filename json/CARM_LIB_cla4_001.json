{
    "author": "carmina libraria",
    "title": "Claudianus, opera, ed. Thaddaeus Ugoletus",
    "url": "http://www.poetiditalia.it/texts/CARM_LIB|cla4|001",
    "text": [
        [
            {
                "verse": "Thadaeo Ugoleto Parmensi oratori celeberrimo Bernardinus Saxoguidanus Mutinensis salutem"
            }
        ],
        [
            {
                "verse": "Quem modo paene situs cariosaque adaederat aetas;"
            },
            {
                "verse": "Barbaricaque miser compede vinctus erat,"
            },
            {
                "verse": "Iam curata nitens attollit Claudius ora"
            },
            {
                "verse": "Et solito candens plectra tenore movet."
            },
            {
                "verse": "Cuius ut extersae labes sileantur et acri"
            },
            {
                "verse": "Censura ad seriem quaeque redacta suam."
            },
            {
                "verse": "Nilus, Hymen Phoenix, epigrammata balnea magnes;"
            },
            {
                "verse": "Et fratrum summo bella parata Iovi."
            },
            {
                "verse": "Et missa Hadriano vel epistola missa Sereno;"
            },
            {
                "verse": "Pluraque quae multos delituere dies."
            },
            {
                "verse": "Per te romulidis est nostrae reddita luci"
            },
            {
                "verse": "Ugolete queunt quolibet ore legi."
            },
            {
                "verse": "Et veluti quondam lacerati corpus alumni"
            },
            {
                "verse": "Dictynnam vitae restituisse ferunt,"
            },
            {
                "verse": "Sic tu membra boni passim discerpta poetae"
            },
            {
                "verse": "Cogis: in effigiem restituisque novam."
            }
        ]
    ]
}