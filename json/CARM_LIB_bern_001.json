{
    "author": "carmina libraria",
    "title": "Bernardus Claravallensis, sermones de tempore et de sanctis",
    "url": "http://www.poetiditalia.it/texts/CARM_LIB|bern|001",
    "text": [
        [
            {
                "verse": "I nunc, i tandem totum Bernarde per orbem"
            },
            {
                "verse": "Protinus exilians ne tua fama cadat"
            },
            {
                "verse": "Divinasque tuis sermonibus exprime leges:"
            },
            {
                "verse": "Crimina fac homines deseruisse velint."
            },
            {
                "verse": "Vade, precor, cunctis Bernarde legare suavis,"
            },
            {
                "verse": "Flecte ad virtutes pectora dura pias."
            },
            {
                "verse": "Tu quemcunque iuvat sanctos cognoscere patres"
            },
            {
                "verse": "Bernardum relegas inclyta scripta colens."
            },
            {
                "verse": "Frigida iamdudum fervescet amore voluntas,"
            },
            {
                "verse": "Et mens doctrinae dulcia mella feret."
            }
        ]
    ]
}