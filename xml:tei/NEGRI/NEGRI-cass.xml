            <div1 xml:id="d001" type="work" decls="#md" met="S1">
                <head>
                    <title>1</title>
                    <bibl source="digital">Marcello Montalto</bibl>
                </head>
                <p xml:id="d001l1" n="0|1">Francisci Nigri Veneti doctoris in Cassandram Pistaeam  | paeonicon sapphicon</p>
                <lb/>
                <l xml:id="d001l2" n="1">Virgo, cui tinnit falerata lingua</l>
                <l xml:id="d001l3" n="2">Ore facundo gravibusque dictis,</l>
                <l xml:id="d001l4" n="3">Cui tonat dignum Cicerone pectus</l>
                <l xml:id="d001l5" n="4" met="A">Eloquiumque,</l>
                <l xml:id="d001l6" n="5">Sive sermonem sequeris pedestrem,</l>
                <l xml:id="d001l7" n="6">Sive bullatum potius cothurnum</l>
                <l xml:id="d001l8" n="7">Vel quod intonsi sapuere patres</l>
                <l xml:id="d001l9" n="8" met="A">Quodque novelli,</l>
                <l xml:id="d001l10" n="9">Nescio quo te celebrare plectro</l>
                <l xml:id="d001l11" n="10">Debeam; laudes subeunt Camoenis</l>
                <l xml:id="d001l12" n="11">Namque tot nostris, quibus alma fulges</l>
                <l xml:id="d001l13" n="12" met="A">Virgo per orbem,</l>
                <l xml:id="d001l14" n="13">Cedat ut plectrum facilis Properti,</l>
                <l xml:id="d001l15" n="14">Musa Nasonis simul et Catulli</l>
                <l xml:id="d001l16" n="15">Atque onus tantum fugiat Maronis</l>
                <l xml:id="d001l17" n="16" met="A">Calliopea.</l>
                <l xml:id="d001l18" n="17">Flebilis illi statuere versus:</l>
                <l xml:id="d001l19" n="18">Cynthiae dulcis modulatus ignes</l>
                <l xml:id="d001l20" n="19">Ille, dilectae lachrymans Corynnae</l>
                <l xml:id="d001l21" n="20" met="A">Alter amores;</l>
                <l xml:id="d001l22" n="21">Lesbiae flammas cecinit Catullus,</l>
                <l xml:id="d001l23" n="22">Filium laetae Veneris poeta</l>
                <l xml:id="d001l24" n="23">Omnium princeps simul et deorum</l>
                <l xml:id="d001l25" n="24" met="A">Arma virumque.</l>
                <l xml:id="d001l26" n="25">Quid novi tandem cecinere tales?</l>
                <l xml:id="d001l27" n="26">Hic virum fortem, solitos hic ignes</l>
                <l xml:id="d001l28" n="27">Dixit et quae sunt recitata quondam</l>
                <l xml:id="d001l29" n="28" met="A">Carmine prisco.</l>
                <l xml:id="d001l30" n="29">Tu tamen cunctos superas, puella,</l>
                <l xml:id="d001l31" n="30">Quos vel ornatis fidibus Latini</l>
                <l xml:id="d001l32" n="31">Sive nugaces voluere Graii</l>
                <l xml:id="d001l33" n="32" met="A">Erre sub astra.</l>
                <l xml:id="d001l34" n="33">Hinc nites pulchra facie, venusto</l>
                <l xml:id="d001l35" n="34">Crine, paestanis labiis, serena</l>
                <l xml:id="d001l36" n="35">Fronte, ridenti penitus ocello</l>
                <l xml:id="d001l37" n="36" met="A">Numinis instar.</l>
                <l xml:id="d001l38" n="37">Hinc velut sidus nitidum refulget</l>
                <l xml:id="d001l39" n="38">Casta mens, sanctum simul et pudicum</l>
                <l xml:id="d001l40" n="39">Pectus et summa probitate totum</l>
                <l xml:id="d001l41" n="40" met="A">Corpus odorum.</l>
                <l xml:id="d001l42" n="41">Inde facundo vigilata corde</l>
                <l xml:id="d001l43" n="42">Dicta mirantur iuvenes senesque;</l>
                <l xml:id="d001l44" n="43">Credimus scriptis utriusque linguae</l>
                <l xml:id="d001l45" n="44" met="A">Numen adesse.</l>
                <l xml:id="d001l46" n="45">Ecquis ornatus poterit pedester</l>
                <l xml:id="d001l47" n="46">Prosequi tantas totidemque laudes?</l>
                <l xml:id="d001l48" n="47">Ecquis in dignos poterit cothurnus</l>
                <l xml:id="d001l49" n="48" met="A">Surgere cantus?</l>
                <l xml:id="d001l50" n="49">Virgines multi cecinere doctas,</l>
                <l xml:id="d001l51" n="50">Tulliam, Gracchi pariter sororem,</l>
                <l xml:id="d001l52" n="51">Quaeve facundi meruit parentis</l>
                <l xml:id="d001l53" n="52" met="A">Dicier haeres;</l>
                <l xml:id="d001l54" n="53">Secla quas vano genuere mundo,</l>
                <l xml:id="d001l55" n="54">Nam decus linguae licet ipse Phoebus</l>
                <l xml:id="d001l56" n="55">Cesserit tantis merito puellis</l>
                <l xml:id="d001l57" n="56" met="A">More vetusto,</l>
                <l xml:id="d001l58" n="57">Non tamen pectus tribuit pudicum,</l>
                <l xml:id="d001l59" n="58">Quod tibi Pallas dedit inter omnes,</l>
                <l xml:id="d001l60" n="59">Quod tibi virtus, probitas fidesque</l>
                <l xml:id="d001l61" n="60" met="A">Cana reliquit.</l>
                <l xml:id="d001l62" n="61">Ergo divino decorata vultu</l>
                <l xml:id="d001l63" n="62">Virgo, divinam sapiensque vocem,</l>
                <l xml:id="d001l64" n="63">Quod nisi sacrum tibi numen esse</l>
                <l xml:id="d001l65" n="64" met="A">Confiteamur?</l>
                <l xml:id="d001l66" n="65">Sacra es et caelo veniens profecto,</l>
                <l xml:id="d001l67" n="66">Ut leves Martis populum ferocem,</l>
                <l xml:id="d001l68" n="67">Secla Saturni tribuasque nobis</l>
                <l xml:id="d001l69" n="68" met="A">Sidere fausto,</l>
                <l xml:id="d001l70" n="69">Diva, sed quo te populus fatiget</l>
                <l xml:id="d001l71" n="70">Thure? Vel quovis titulo vocari?</l>
                <l xml:id="d001l72" n="71">Iure pistaeam precibus pudicis</l>
                <l xml:id="d001l73" n="72" met="A">Flectite vates.</l>
                <l xml:id="d001l74" n="73">Hanc sibi Phoebus cupiat puellam,</l>
                <l xml:id="d001l75" n="74">Haec novenarum numeros sororum</l>
                <l xml:id="d001l76" n="75">Augeat; denam vocitemus omnes</l>
                <l xml:id="d001l77" n="76" met="A">Hanc quoque Musam.</l>
                <l xml:id="d001l78" n="77">Haec mihi cantus tribuat fidesque</l>
                <l xml:id="d001l79" n="78">Haec modos, plectrum, cytharam, cothurnum,</l>
                <l xml:id="d001l80" n="79">Haec mihi demum faveat deinceps</l>
                <l xml:id="d001l81" n="80" met="A">Calliopea.</l>
            </div1>
        </body>
